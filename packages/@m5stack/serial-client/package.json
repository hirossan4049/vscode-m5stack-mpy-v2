{
  "name": "@m5stack/serial-client",
  "version": "1.0.0",
  "description": "Universal M5Stack serial communication library for Node.js, Browser, and React Native",
  "main": "dist/node/index.js",
  "browser": "dist/browser/index.js",
  "react-native": "dist/react-native/index.js",
  "types": "dist/types/index.d.ts",
  "files": [
    "dist/",
    "types/",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "node": "./dist/node/index.js",
      "browser": "./dist/browser/index.js",
      "react-native": "./dist/react-native/index.js",
      "types": "./dist/types/index.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:node && npm run build:browser && npm run build:types",
    "build:node": "tsc -p tsconfig.node.json",
    "build:browser": "webpack --config webpack.browser.js",
    "build:types": "tsc -p tsconfig.types.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build && npm test"
  },
  "keywords": [
    "m5stack",
    "micropython",
    "serial",
    "communication",
    "iot",
    "embedded",
    "hardware"
  ],
  "author": "M5Stack Community",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/m5stack/serial-client.git"
  },
  "bugs": {
    "url": "https://github.com/m5stack/serial-client/issues"
  },
  "homepage": "https://github.com/m5stack/serial-client#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "peerDependencies": {
    "serialport": "^13.0.0"
  },
  "peerDependenciesMeta": {
    "serialport": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "eslint": "^8.0.0",
    "jest": "^29.0.0",
    "rimraf": "^3.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^4.8.0",
    "webpack": "^5.0.0",
    "webpack-cli": "^4.0.0"
  },
  "optionalDependencies": {
    "serialport": "^13.0.0"
  }
}